<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:define-macro="master">
<head>
  <meta http-equiv="content-type" content="text/xml+xhtml; charset=utf-8" />
  <title>Showroom</title>
  <meta name="keywords" content="python web application" />
  <meta name="description" content="repoze.bfg web application" />
  <script type="text/javascript" src="${request.application_url}/static/jquery/js/jquery-1.6.2.min.js"></script>
  <script type="text/javascript" src="${request.application_url}/static/jquery/js/jquery-ui-1.8.16.custom.min.js"></script>
  <link href="${request.application_url}/static/default.css" rel="stylesheet" type="text/css" />
  <script type="text/javascript" src="${request.application_url}/static/functions.js"></script>
</head>

<body>

<div id="wrapper">

  <!-- header -->
  <div id="header">
    <!-- logo -->
    <div id="logo">
        <a href="${request.application_url}">
            <img src="${request.application_url}/static/images/logo.png" alt="logo" />
        </a>
    </div>

    <div id="header-infos" metal:define-slot="header">
    placeholder for header infos
    </div>
  </div>

  <!-- message -->
  <tal:block define="session python:request.environ.get('beaker.session', {})"
             condition="session.has_key('message')">
  <div id="message"
       tal:define="message python:session.pop('message', None);
                   message_type python:session.pop('message_type', None);"
       tal:attributes="class string:subcontent appear ${message_type};"
       tal:content="structure message" />
  <div tal:replace="python:session.save() or ''" />
  </tal:block>

  <!-- content -->
  <div id="content" metal:define-slot="content">
  page content
  </div>

  <!-- start footer -->
  <div colspan="2" id="footer">
      Powered by <a href="http://www.pylonsproject.org/">Pyramid</a>
      - <a href="https://bitbucket.org/ccomb/showroom">Source code</a>
  </div>

</div>

</body>
</html>
