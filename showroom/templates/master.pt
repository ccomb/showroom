<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:define-macro="master">
<head>
  <meta http-equiv="content-type" content="text/xml+xhtml; charset=utf-8" />
  <title>Showroom</title>
  <meta name="keywords" content="python web application" />
  <meta name="description" content="repoze.bfg web application" />
  <script type="text/javascript" src="${request.application_url}/static/jquery/js/jquery-1.6.2.min.js"></script>
  <script type="text/javascript" src="${request.application_url}/static/jquery/js/jquery-ui-1.8.16.custom.min.js"></script>
  <link href='http://fonts.googleapis.com/css?family=Ubuntu:300' rel='stylesheet' type='text/css'>
  <link href="${request.application_url}/static/default.css" rel="stylesheet" type="text/css" />
  <script type="text/javascript" src="${request.application_url}/static/functions.js"></script>
</head>

<body>

<div id="wrapper">

  <!-- header -->
  <div id="header">
    <!-- logo -->
    <div id="logo">
        <a href="${request['admin_url']}">
            <img src="${request.application_url}/static/images/logo.png" alt="logo" />
        </a>
    </div>

    <div id="header-infos" metal:define-slot="header">
    placeholder for header infos
    </div>
  </div>

  <!-- message -->
  <tal:block repeat="type python: ['success', 'error', 'warning', 'info']">
    <div class="alert-message ${type}"
         tal:condition="python: request.session.peek_flash(type)"
         tal:repeat="message python:request.session.pop_flash(type)"
         tal:attributes="class string:subcontent appear ${type};"
         tal:content="structure message">
    MESSAGE
    </div>
  </tal:block>


  <!-- content -->
  <div id="content" metal:define-slot="content">
  page content
  </div>

  <!-- start footer -->
  <div colspan="2" id="footer">
      <a href="https://bitbucket.org/ccomb/showroom">Showroom</a>
      is powered by
      <a href="http://www.pylonsproject.org/">Pyramid</a>
  </div>

</div>

</body>
</html>
