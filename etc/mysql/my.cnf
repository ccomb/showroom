#
# The MySQL database server configuration file.
#

[mysqld]

#socket		= # given on the command line!
#port		= 3306 # given on the command line!
basedir		= /usr " # maybe not needed
#datadir		= # given on the command line!
tmpdir		= /tmp  # maybe not needed
skip-external-locking
bind-address		= 127.0.0.1

key_buffer		= 16M
max_allowed_packet	= 16M
thread_stack		= 192K
thread_cache_size       = 8

myisam-recover         = BACKUP

query_cache_limit	= 1M
query_cache_size        = 16M

#log_error          = # given on the command line!

expire_logs_days	= 10
max_binlog_size         = 100M

